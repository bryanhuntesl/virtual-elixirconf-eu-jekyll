{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [
                "$jekyll-error-watch",
                "$jekyll-warning-watch"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$jekyll-error",
                "$jekyll-warning"
            ]
        }
    ]
}
